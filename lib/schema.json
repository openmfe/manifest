{
    "$schema": "http://json-schema.org/draft-07/schema#",

    "_definitions": {
        "name": {
            "type": "string",
            "minLength": 5,
            "maxLength": 50
        },
        "identifier": {
            "type": "string",
            "minLength": 1,
            "maxLength": 30
        },
        "description": {
            "type": "string",
            "minLength": 20,
            "maxLength": 300
        },
        "url": {
            "type": "string",
            "format": "uri-reference"
        },
        "attributeOrEvent": {
            "type": "object",
            "properties": {
                "name": {
                    "$ref": "#/_definitions/identifier"
                },
                "description": {
                    "$ref": "#/_definitions/description"
                },
                "documentation": {
                    "$ref": "#/_definitions/url"
                },
                "schema": {
                    "$ref": "http://json-schema.org/draft-07/schema#"
                }
            },
            "required": ["name", "description", "schema"]
        }
    },

    "type": "object",

    "properties": {
        "version": {
            "type": "string",
            "pattern": "^[0-9]+\\.[0-9]+(\\.[0-9]+)?$"
        },

        "name": {
            "$ref": "#/_definitions/name"
        },

        "description": {
            "$ref": "#/_definitions/description"
        },

        "documentation": {
            "$ref": "#/_definitions/url"
        },

        "url": {
            "type": "object",
            "properties": {
                "frontend": {
                    "$ref": "#/_definitions/url"
                },
                "prerender": {
                    "$ref": "#/_definitions/url"
                },
                "semantic": {
                    "$ref": "#/_definitions/url"
                }
            },
            "required": ["frontend", "prerender"]
        },

        "tag": {
            "type": "string",
            "minLength": 5,
            "maxLength": 40,
            "pattern": "^[a-z0-9]+(-[a-z0-9]+)*$"
        },

        "icon": {
            "$ref": "#/_definitions/url"
        },

        "publisher": {
            "type": "object",
            "properties": {
                "name": {
                    "$ref": "#/_definitions/name"
                },
                "email": {
                    "type": "string",
                    "format": "email"
                }
            },
            "required": ["name", "email"]
        },

        "attributes": {
            "type": "array",
            "items": {
                "allOf": [{
                        "$ref": "#/_definitions/attributeOrEvent"
                    },
                    {
                        "type": "object",
                        "properties": {
                            "required": {
                                "type": "boolean"
                            },
                            "default": {
                                "type": "string"
                            }
                        },
                        "required": ["required"]
                    }
                ]
            }
        },

        "events": {
            "type": "array",
            "items": {
                "$ref": "#/_definitions/attributeOrEvent"
            }
        },

        "semantic": {
            "$ref": "http://json-schema.org/draft-07/schema#"
        },

        "examples": {
            "type": "array",
            "minItems": 1,
            "items": {
                "type": "object",
                "required": ["description", "attributes"],
                "properties": {
                    "description": {
                        "$ref": "#/_definitions/description"
                    },
                    "attributes": {
                        "type": "object",
                        "patternProperties": {
                            "^.*$": {
                                "type": "string"
                            }
                        }
                    }
                }
            }
        },

        "screenshots": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "description": {
                        "$ref": "#/_definitions/description"
                    },
                    "url": {
                        "$ref": "#/_definitions/url"
                    }
                },
                "required": ["description", "location"],
                "additionalProperties": false
            }
        }
    },

    "required": [
        "version",
        "name",
        "description",
        "documentation",
        "tag",
        "url",
        "icon",
        "publisher",
        "attributes",
        "events",
        "examples"
    ],

    "additionalProperties": false
}
